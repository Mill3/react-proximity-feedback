{
  "name": "react-proximity-feedback",
  "version": "1.0.4",
  "description":
    "React render-prop component to get the proximity of the cursor to a DOM node.",
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": ["es", "lib", "umd"],
  "scripts": {
    "docs": "nwb build-react-component && node createDocs.js",
    "build": "nwb build-react-component",
    "clean": "nwb clean-module && nwb clean-demo",
    "start": "nwb serve-react-demo",
    "test": "cypress open",
    "test:headless": "cypress run --record false",
    "precommit": "lint-staged",
    "lint": "eslint . --cache --fix"
  },
  "dependencies": {
    "lodash.throttle": "4.1.1",
    "prop-types": "15.6.1"
  },
  "peerDependencies": {
    "react": "16.x"
  },
  "lint-staged": {
    "{demo/src/**/*, src/**/*}.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,css,md}": ["prettier --write", "git add"]
  },
  "devDependencies": {
    "cypress": "^2.1.0",
    "eslint": "^4.18.2",
    "eslint-config-esnext": "^2.0.0",
    "eslint-plugin-no-only-tests": "^2.0.0",
    "eslint-plugin-cypress": "^2.0.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.8.2",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "nwb": "0.21.x",
    "prettier": "^1.11.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2"
  },
  "author": "Andy Krings-Stern <react@ankri.de>",
  "homepage": "https://ankri.github.com/react-proximity-feedback",
  "bugs": "https://github.com/ankri/react-proximity-feedback/issues",
  "license": "MIT",
  "repository": "https://github.com/ankri/react-proximity-feedback",
  "keywords": [
    "react-component",
    "codrops",
    "render-prop",
    "proximity",
    "feedback",
    "cursor",
    "nearby"
  ]
}
